{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["es6"],                                      
    "module": "commonjs",                                
    "rootDir": "src",                                                          
    "resolveJsonModule": true,                        
    "allowJs": true,                                    
    "outDir": "dist",                               
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                              
    "skipLibCheck": true                               
  }
}
